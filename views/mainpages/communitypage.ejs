<div class="container-main-createpost py-2 px-3  min-vh-100">
    <h1 class="text-secondary mb-3">Community Discussions</h1>

    <!-- Discussion Section -->
    <div class="discussion-section text-light">
        <h2>Start a Discussion</h2>
        <form>
            <div class="form-group">
                <label for="discussionTitle">Discussion Title</label>
                <input type="text" class="form-control" id="discussionTitle" placeholder="Enter title">
            </div>
            <div class="form-group">
                <label for="discussionContent">Discussion Content</label>
                <textarea class="form-control" id="discussionContent" rows="4" placeholder="Write your discussion here..."></textarea>
            </div>
            <button type="submit" class="btn btn-dark mt-2">Post Discussion</button>
        </form>
    </div>

    <!-- Recent Discussions Section -->
    <div class="recent-discussions text-light">
        <h2>Recent Discussions</h2>
